DATABASE_NAME="{{ document_merge_service_db_dbname }}"
DATABASE_USER="{{ document_merge_service_db_username }}"
DATABASE_PASSWORD="{{ document_merge_service_db_password }}"

DATABASE_HOST="{{ document_merge_service_db_host }}"
DATABASE_PORT="{{ document_merge_service_db_port }}"
DATABASE_ENGINE="{{ document_merge_service_db_engine }}"

ALLOWED_HOSTS="{{ document_merge_service_django_allowed_hosts }}"
SECRET_KEY="{{ document_merge_service_django_secret_key }}"

OIDC_USERINFO_ENDPOINT="{{ document_merge_service_oidc_userinfo_endpoint }}"
OIDC_BEARER_TOKEN_REVALIDATION_TIME="{{ document_merge_service_oidc_bearer_token_revalidation_time }}"
OIDC_USERNAME_CLAIM="{{ document_merge_service_oidc_username_claim }}"

DOCXTEMPLATE_JINJA_EXTENSIONS="{{ document_merge_service_docxtemplate_jinja_extensions }}"

MEDIA_ROOT="{{ document_merge_service_media_root }}"
DATABASE_DIR="{{ document_merge_service_database_dir }}"

ISOLATE_UNOCONV=True
REQUIRE_AUTHENTICATION=True
PAGINATION_ENABLED=False

ENABLE_ADMIN_EMAIL_LOGGING=True
ADMINS="Admin <{{ camac_admin_email }}>"
SERVER_EMAIL="{{ camac_python_django_server_email }}"
EMAIL_HOST="{{ camac_python_django_email_host }}"
EMAIL_PORT="{{ camac_python_django_email_port }}"

DMS_VISIBILITY_CLASSES=document_merge_service.extensions.visibilities.CustomVisibility
DMS_PERMISSION_CLASSES=document_merge_service.extensions.permissions.CustomPermission
EXTENSIONS_ARGUMENTS=DJANGO_API={{ camac_portal_uri }},APPLICATION={{ camac_application }}
DATA_UPLOAD_MAX_NUMBER_FIELDS=2000

{% if http_proxy %}
HTTP_PROXY={{ http_proxy }}
{% endif %}
{% if https_proxy %}
HTTPS_PROXY={{ https_proxy }}
{% endif %}
{% if no_proxy and (http_proxy or https_proxy) %}
NO_PROXY={{ no_proxy }}
{% endif %}

LD_LIBRARY_PATH=/opt/openssl/lib/

# force path to point to "our" virtualenv. rest is fairly standard
PATH=/root/.pyenv/versions/document-merge-service/bin/:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
